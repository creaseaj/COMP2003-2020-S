<Window x:Class="VAPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VAPS"
        mc:Ignorable="d"
        Title="VAPTS - Address Resolution Protocol" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="frmARP" Width="181*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="481*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnRun" Content="Run ARP" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="viewNetwork"/>
        <TextBox x:Name="localDevices" HorizontalAlignment="Left" Height="399" Margin="105,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="677" FontFamily="Courier New" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
