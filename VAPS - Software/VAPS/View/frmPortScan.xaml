<Window x:Class="VAPS.View.PortScan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VAPS.View"
        mc:Ignorable="d"
        Title="VAPTS - Port Scanner" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154*"/>
            <ColumnDefinition Width="639*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtPorts" HorizontalAlignment="Left" Height="337" Margin="139,72,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="643" FontFamily="Courier New" BorderBrush="White" Grid.ColumnSpan="2"/>
        <DockPanel HorizontalAlignment="Left" LastChildFill="False" Width="800" RenderTransformOrigin="-2.719,-2.83" Background="#FF850505" Margin="0,0,-8,355" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FF363636" HorizontalAlignment="Left" Margin="0,64,0,0" Stroke="Black" Width="134"/>
        <Button x:Name="btnRun" Margin="7,73,30.5,301" Click="viewNetwork" Content="Run Port Scan"/>

    </Grid>
</Window>
